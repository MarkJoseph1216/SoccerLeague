<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorWhite"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerSports"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:textAlignment="center"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/SliderDots"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:gravity="bottom|center"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:elevation="7dp"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="12dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:focusableInTouchMode="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/lato_light"
                        android:paddingLeft="20dp"
                        android:drawablePadding="5dp"
                        android:textSize="16sp"
                        android:textColorHint="@color/hintColor"
                        android:hint="Search"
                        android:drawableLeft="@drawable/main_drawable_left_edittext"
                        android:id="@+id/edtSearchItems"
                        android:layout_width="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_corner_background"
                        android:gravity="center|left" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/btnClose"
                        android:background="@drawable/ic_baseline_close_24"
                        android:layout_marginTop="39dp"
                        android:layout_marginRight="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <!-- ADD ANY THING THAT GETS SCROLLED ALL THE WAY UP WITH TOOLBAR -->
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!--- ADD TAB_LAYOUT HERE-->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="bottom|center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="20dp"
                android:id="@+id/recycleview_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:id="@+id/loadingBanner"
        app:indicatorColor="@color/colorLightRed"
        app:indicatorName="BallBeatIndicator"
        android:layout_centerInParent="true"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <TextView
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/loadingBanner"
        android:layout_centerInParent="true"
        android:fontFamily="@font/lato_regular"
        android:id="@+id/txtLoadingDetails"
        android:text="Loading all data, Please wait..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>