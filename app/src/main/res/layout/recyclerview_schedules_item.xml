<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:background="@color/colorWhite"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:id="@+id/imgSchedules"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:visibility="gone"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:id="@+id/loadingImage"
        app:indicatorColor="@color/colorLightRed"
        app:indicatorName="BallBeatIndicator"
        android:layout_centerInParent="true"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/lato_regular"
        android:layout_below="@+id/imgSchedules"
        android:id="@+id/txtEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/colorLightRed"
        android:layout_below="@+id/txtEventName"
        android:id="@+id/txtSeason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/lato_regular"
        android:layout_below="@+id/txtSeason"
        android:id="@+id/txtHomeTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/lato_regular"
        android:layout_below="@+id/txtHomeTeam"
        android:id="@+id/txtAwayTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorLightGreen"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/lato_regular"
        android:layout_below="@+id/txtAwayTeam"
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_regular"
        android:layout_below="@+id/txtStatus"
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_regular"
        android:layout_below="@+id/txtDescription"
        android:id="@+id/txtResponseCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_regular"
        android:layout_below="@+id/txtResponseCountry"
        android:id="@+id/txtVenueStadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nunito_regular"
        android:layout_below="@+id/txtVenueStadium"
        android:id="@+id/txtTwitterFeeds"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/viewSeparator"
        android:background="@color/colorGray"
        android:layout_below="@+id/txtTwitterFeeds"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</RelativeLayout>